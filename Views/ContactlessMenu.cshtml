@inherits UmbracoViewPage
@using Menu4Tech.Helper
@{
    Layout = "master.cshtml";
    var currentLanguage = System.Threading.Thread.CurrentThread.CurrentCulture.ToString();
    var cssRTL = "";
    if(currentLanguage == "he"){
        cssRTL = "";
    }
    ViewBag.IsMobileImage = "";
    if(UserDetailClient.IsMobileDeviceBrowser(Context))
    {
        ViewBag.IsMobileImage = "_mob_";
    }
	
    if(currentLanguage == "he"){
        ViewBag.PageTitle = Model.Value("pageTitle");
        ViewBag.MetaDescription = Model.Value("metaDescription");
    }else{
        ViewBag.PageTitle = Model.Value("pageTitle");
        ViewBag.MetaDescription = Model.Value("metaDescription");
    }
}
<main class="main" id="primary">
    <section class="hero">
        <div class="container">
            <div class="row">
                <div class="column">
                    <h1>@Html.Raw(Umbraco.GetDictionaryValue("Create stunning digital menus"))</h1>
                    <p>@Umbraco.GetDictionaryValue("Turn your restaurant into")</p>
                    <ul>
                        <li>@Umbraco.GetDictionaryValue("safe")</li>
                        <li>@Umbraco.GetDictionaryValue("simple")</li>
                        <li>@Umbraco.GetDictionaryValue("easy to use")</li>
                    </ul>
                    <div class="buttons">
                        <a href="@Html.Raw(TranslationHelper.OverridePathWithCurrentCulture("/JoinBusiness/Login"))" class="button button--accent">@Umbraco.GetDictionaryValue("Let’s start")</a>
                        <a href="#" class="button">@Umbraco.GetDictionaryValue("Get Started")</a>
                    </div>
                </div>
                <div class="column">
                    <picture>
                        <source srcset="/assets/images/instantly.png" media="(max-width: 560px)">
                        <img src="/assets/images/instantly.png" alt="phone scan QR code">
                    </picture>
                </div>
            </div>
        </div>
    </section>
    <section class="works">
        <div class="container">
            <h2>@Umbraco.GetDictionaryValue("How it works")</h2>
            <ul class="works__list">
                <li>
                    <img src="/assets/images/works/work1.png" alt="laptop icon">
                    <h3>@Umbraco.GetDictionaryValue("Create your account")</h3>
                    <p>
                        @Umbraco.GetDictionaryValue("Sign up in minutes and manage everything from your dashboard")
                    </p>
                </li>
                <li>
                    <img src="/assets/images/works/work2.png" alt="tablet icon">
                    <h3>@Umbraco.GetDictionaryValue("Build your digital menu")</h3>
                    <p>
                        @Umbraco.GetDictionaryValue("Add your dishes, categories, and photos with our simple editor")
                    </p>
                </li>
                <li>
                    <img src="/assets/images/works/work3.png" alt="printer icon">
                    <h3>@Umbraco.GetDictionaryValue("Print your QR code")</h3>
                    <p>
                        @Umbraco.GetDictionaryValue("Download and print, or order professional stickers from us")
                    </p>
                </li>
                <li>
                    <img src="/assets/images/works/work4.png" alt="phone with qr icon">
                    <h3>@Umbraco.GetDictionaryValue("Go contactless")</h3>
                    <p>@Umbraco.GetDictionaryValue("Place the QR codes on tables and let guests scan to order instantly")</p>
                </li>

            </ul>
        </div>
    </section>

    <section class="code">
        <div class="container">
            <ul class="code__list">
                <li>
                    <div class="row">
                        <div class="column">
                            <h3><span>@Umbraco.GetDictionaryValue("We create your QR Code")</span></h3>
                            <p>
                                @Umbraco.GetDictionaryValue("We generate a unique online page for your restaurant, including your digital menu and QR Code. You can easily update your menu at any time")
                            </p>
                            <a href="#" class="button button--accent">@Umbraco.GetDictionaryValue("Create your QR menu")</a>
                        </div>
                        <img src="/assets/images/code/code1.png" alt="tablet with menu image">
                    </div>
                </li>
                <li>
                    <div class="row">
                        <div class="column">
                            <h3>@Umbraco.GetDictionaryValue("Display your QR barcode")</h3>
                            <p>
                                @Umbraco.GetDictionaryValue("Place your QR Code on tables using stands, stickers, or table tents. Make it easy for customers to scan")
                            </p>
                            <div class="buttons">
                                <a href="#" class="button button--accent">@Umbraco.GetDictionaryValue("Create your QR menu")</a>
                                <a href="#" class="button button--white">@Umbraco.GetDictionaryValue("Order table stand")</a>
                            </div>
                        </div>
                        <img src="/assets/images/code/code2.png" alt="QR code image">
                    </div>
                </li>
                <li>
                    <div class="row">
                        <div class="column">
                            <h3>@Umbraco.GetDictionaryValue("Clients scan the code")</h3>
                            <p>
                                @Umbraco.GetDictionaryValue("Your guests scan the QR Code with their phones, and the menu instantly opens — no app download needed.")
                            </p>
                            <a href="#" class="button">@Umbraco.GetDictionaryValue("Start free now")</a>
                        </div>
                        <img src="/assets/images/code/code3.png" alt="phone scan QR code image">
                    </div>
                </li>
            </ul>
        </div>
    </section>

    <section class="instantly">
        <div class="container">
            <div class="column">
                <h2 class="center">
                    @Html.Raw(Umbraco.GetDictionaryValue("Update your menu instantly"))
                </h2>
                <p class="center">@Umbraco.GetDictionaryValue("No more printing costs — edit and publish your menu in real-time")</p>
                <a href="#" class="button button--accent">@Umbraco.GetDictionaryValue("Update your menu anytime")</a>
            </div>
        </div>
    </section>
</main>